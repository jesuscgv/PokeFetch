---
import Layout from "../layouts/Layout.astro";
import GetData from "../components/getData.astro";
---

<Layout title="PokeFetch">
  <main
    class="flex flex-col grow max-w-screen h-screen items-center text-white"
  >
    <h1 class="font-extrabold text-3xl mt-20 opacity-90">Welcome to:</h1>

    <p
      class="class=
      text-6xl
      md:text-7xl
      font-extrabold
      bg-clip-text
      text-transparent
      bg-[linear-gradient(to_right,theme(colors.sky.400),theme(colors.sky.500),theme(colors.fuchsia.300),theme(colors.fuchsia.400),theme(colors.fuchsia.400),theme(colors.fuchsia.100),theme(colors.fuchsia.400))]
      bg-[length:200%_auto]
      animate-gradient"
    >
      PokeFetch
    </p>

    <div
      class="flex flex-col grow max-w-screen h-screen items-center text-white
      py-5 my-20"
    >
      <GetData />
    </div>
    <footer class="py-2 text-xs opacity-80 flex flex-col items-center">
      <p class="">
        Made with ❤️ by <a
          class="text-blue-300"
          href="https://github.com/jesuscgv">Jesus</a
        >
      </p>
      <p class="opacity-90">
        This has been made using <a
          class="text-gray-400"
          href="https://pokeapi.co/">PokeAPI</a
        >
      </p>
    </footer>
  </main>
</Layout>
